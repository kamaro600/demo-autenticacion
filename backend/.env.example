# Database Connection
ConnectionStrings__DefaultConnection=Server=localhost;Port=3306;Database=AuthDemoDB;Uid=root;Pwd=rootpassword;CharSet=utf8mb4;

# JWT Settings
JwtSettings__SecretKey=this_is_a_very_long_secret_key_that_should_be_at_least_256_bits_long_for_security
JwtSettings__Issuer=DemoAuthAPI
JwtSettings__Audience=DemoAuthClient
JwtSettings__ExpirationMinutes=15

# OAuth - Google
OAuth__Google__ClientId=your-google-client-id
OAuth__Google__ClientSecret=your-google-client-secret

# OAuth - GitHub
OAuth__GitHub__ClientId=your-github-client-id
OAuth__GitHub__ClientSecret=your-github-client-secret
OAuth__GitHub__RedirectUri=http://localhost:3000/auth/github/callback

# OAuth - Discord
OAuth__Discord__ClientId=your-discord-client-id
OAuth__Discord__ClientSecret=your-discord-client-secret
OAuth__Discord__RedirectUri=http://localhost:3000/auth/discord/callback

# Application
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_URLS=http://+:5000
