# API Configuration
REACT_APP_API_URL=http://localhost:5000

# OAuth - Google (Client ID only, used in frontend)
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id

# OAuth - GitHub (Client ID only, used in frontend)
REACT_APP_GITHUB_CLIENT_ID=your-github-client-id

# OAuth - Discord (Client ID only, used in frontend)
REACT_APP_DISCORD_CLIENT_ID=your-discord-client-id

# Redirect URIs
REACT_APP_GITHUB_REDIRECT_URI=http://localhost:3000/auth/github/callback
REACT_APP_DISCORD_REDIRECT_URI=http://localhost:3000/auth/discord/callback

# Demo Mode (true/false)
REACT_APP_USE_DEMO_MODE=true
